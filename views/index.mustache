
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0,maximum-scale=1"
    />
    <title>Movie-Wiki | Home</title>

    
    <link
      href="http://fonts.googleapis.com/css?family=Roboto:300,400,700|"
      rel="stylesheet"
      type="text/css"
    />
    <link href="./fonts/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css2?family=Kanit:wght@500&family=Lobster&family=Permanent+Marker&display=swap" rel="stylesheet">

    <!-- Loading main css file -->
    <link rel="stylesheet" href="../css/style.css" />

  
  </head>

  <body>
  
    <div id="site-content">
      <header class="site-header">
        <div class="container">
          <a href="/" id="branding">
            <img src="https://scontent-dfw5-1.xx.fbcdn.net/v/t1.0-1/p320x320/17425117_692024894313530_8635769697516586971_n.png?_nc_cat=105&_nc_sid=1eb0c7&_nc_ohc=vs7_c9jGHDQAX8alsoP&_nc_ht=scontent-dfw5-1.xx&oh=99ff6b0ae25df8a5c1b2678de7c83ad3&oe=5F064ABE" alt="" class="logo" id="logoImg"/>
            <div class="logo-copy">
              <h1 class="site-title">Movie-Wiki</h1>
              <small class="site-description">The Free Movie Database</small>
            </div>
          </a>

          <div class="main-navigation">
            <button type="button" class="menu-toggle">
              <i class="fa fa-bars" ></i>
            </button>
            <ul class="menu">
              <li class="menu-item current-menu-item">
                <a href="/">Home</a>
              </li>
              <li class="menu-item"><a href="/search">Search</a></li>
              
            </ul>
          </div>
          <!-- .main-navigation -->

          <div class="mobile-navigation"></div>
        </div>
      </header>
      <main class="main-content">
        <div class="container">
        <h1 id="today-pick">Today's Picks</h1>
          <div class="page">
            <div class="row">
              <div class="col-md-9">
                <div class="slider">
                  <ul class="slides">
                    <li>
                    
                     <img src="{{mp1}}" alt="Slide 1"
                       class='slider-movie-poster'/>
                    
                    </li>
                    <li>
                      <img src="{{mp2}}" alt="Slide 2" class='slider-movie-poster'
                      />
                    </li>
                    <li>
                      <img src="{{mp3}}" alt="Slide 3" class='slider-movie-poster'
                      />
                    </li>
                  </ul>
                </div>
              </div>
              <div class="col-md-3">
                <div class="row">
                  <div class="col-sm-6 col-md-12">
                    <div class="latest-movie">
                      <img src="{{mp4}}" alt="Movie 1"
                      class="img-surround"/>
                    </div>
                  </div>
                  <div class="col-sm-6 col-md-12">
                    <div class="latest-movie">
                      <img src="{{mp5}}" alt="Movie 2"
                      class="img-surround"/>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            
            
            
            <!-- .row -->
            <div class="row">
              <div class="col-sm-6 col-md-3">
                <div class="latest-movie">
                  <img src="{{mp6}}" alt="Movie 3" class="img-surround"/>
                </div>
              </div>
              <div class="col-sm-6 col-md-3">
                <div class="latest-movie">
                  <img src="{{mp7}}" alt="Movie 4" class="img-surround"/>
                </div>
              </div>
              <div class="col-sm-6 col-md-3">
                <div class="latest-movie">
                  <img src="{{mp8}}" alt="Movie 5" class="img-surround"/>
                </div>
              </div>
              <div class="col-sm-6 col-md-3">
                <div class="latest-movie">
                  <img src="{{mp9}}" alt="Movie 6" class="img-surround"/>
                </div>
              </div>
            </div>
            <!-- .row -->
              <div class="col-md-4">
                <img src="{{m1.Poster}}" class="imgBot"/>
                <h2 class="section-title" class="movie-details-text">{{m1.Title}}</h2>
                <p class='movie-details-text'>
                  {{m1.Plot}}
                </p>
                <ul class="movie-schedule">
                  <li>
                    <div class="date">Rated</div>
                    <h2 class="entry-title">
                      <p> {{m1.Rated}}</p>
                    </h2>
                  </li>
                  <li>
                    <div class="date">Genre</div>
                    <h2 class="entry-title">
                      <p>{{m1.Genre}}</p>
                    </h2>
                  </li>
                  <li>
                    <div class="date">Metascore</div>
                    <h2 class="entry-title">
                      <p>{{m1.Metascore}}</p>
                    </h2>
                  </li>
                  <li>
                    <div class="date">Imdb Rating</div>
                    <h2 class="entry-title">
                      <p>{{m1.imdbRating}}</p>
                    </h2>
                  </li>
                </ul>
              </div>
             
            
                
                <!-- .movie-schedule -->
              </div>
            
              <div class="col-md-4" >
                <img src="{{m2.Poster}}" class="imgBot"/>
                <h2 class="section-title" class='movie-details-text'>{{m2.Title}}</h2>
                <p class='movie-details-text'>
                  {{m2.Plot}}
                </p>
                <ul class="movie-schedule">
                 <li>
                    <div class="date">Rated</div>
                    <h2 class="entry-title" class='movie-details-text'>
                      <p class='movie-details-text'> {{m2.Rated}}</p>
                    </h2>
                  </li>
                  <li>
                    <div class="date">Genre</div>
                    <h2 class="entry-title">
                      <p>{{m2.Genre}}</p>
                    </h2>
                  </li>
                  <li>
                    <div class="date">Metascore</div>
                    <h2 class="entry-title">
                      <p>{{m2.Metascore}}</p>
                    </h2>
                  </li>
                  <li>
                    <div class="date">Imdb Rating</div>
                    <h2 class="entry-title">
                      <p>{{m2.imdbRating}}</p>
                    </h2>
                  </li>
                </ul>
                <!-- .movie-schedule -->
              </div>
              <div class="col-md-4" >
                <img src="{{m3.Poster}}" class="imgBot"/>
                <h2 class="section-title" >{{m3.Title}}</h2>
                <p >
                  {{m3.Plot}}
                </p>
                <ul class="movie-schedule">
                 <li>
                    <div class="date">Rated</div>
                    <h2 class="entry-title">
                      <p> {{m3.Rated}}</p>
                    </h2>
                  </li>
                  <li>
                    <div class="date">Genre</div>
                    <h2 class="entry-title">
                      <p>{{m3.Genre}}</p>
                    </h2>
                  </li>
                  <li>
                    <div class="date">Metascore</div>
                    <h2 class="entry-title" >
                      <p>{{m3.Metascore}}</p>
                    </h2>
                  </li>
                  <li>
                    <div class="date">Imdb Rating</div>
                    <h2 class="entry-title">
                      <p>{{m3.imdbRating}}</p>
                    </h2>
                  </li>
                </ul>
              </div>

            </div>

          </div>
        </div>
      </main>
      <footer class="site-footer">
       
      </footer>
    </div>
    <!-- Default snippet for navigation -->
    <script src="./js/index.js"></script>
    <script src="./js/jquery-1.11.1.min.js"></script>
    <script src="./js/plugins.js"></script>
    <script src="./js/app.js"></script>
  </body>
</html>
